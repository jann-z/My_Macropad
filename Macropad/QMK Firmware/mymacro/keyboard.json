{
    "keyboard_name": "MyRP2040Macro",
    "manufacturer": "Self",
    "maintainer": "Me",
    "usb": {
        "vid": "0xFEED",
        "pid": "0x0000",
        "device_version": "0.0.1"
    },
    "processor": "RP2040",
    "bootloader": "rp2040",
    "diode_direction": "COL2ROW",
    "matrix_pins": {
        "direct": [
            ["GP1", "GP2", "GP3", "GP4", "GP6", "GP7", "GP26"]
        ]
    },
    "encoder": {
        "rotary": [
            { "pin_a": "GP28", "pin_b": "GP27" }
        ]
    },
    "ws2812": {
        "pin": "GP0",
        "driver": "vendor"
    },
    "rgblight": {
        "led_count": 6,
        "animations": {
            "breathing": true,      // Langsames Pulsieren (angenehm)
            "rainbow_mood": true,   // Langsamer Farbwechsel aller LEDs gleichzeitig
            "rainbow_swirl": true,  // Der Regenbogen "fließt" seitlich durch (sehr schick)
            "snake": true,          // Eine "Schlange" (Pixel) wandert hin und her
            "knight": true,         // Knight Rider Effekt (K.I.T.T.) - Roter Scanner
            "christmas": true,     // Rot/Grün blinken (nur für Dezember gut)
            "static_gradient": true,// Farbverlauf über die 6 LEDs
            "twinkle": true         // Zufälliges Aufblitzen wie Sterne
        }
    },
    "layouts": {
        "LAYOUT": {
            "layout": [
                {"matrix": [0, 0], "x": 0, "y": 0},
                {"matrix": [0, 1], "x": 1, "y": 0},
                {"matrix": [0, 2], "x": 2, "y": 0},
                {"matrix": [0, 3], "x": 0, "y": 1},
                {"matrix": [0, 4], "x": 1, "y": 1},
                {"matrix": [0, 5], "x": 2, "y": 1},
                {"matrix": [0, 6], "x": 3, "y": 0} 
            ]
        }
    }
}